<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/home">


    <fragment
        android:id="@+id/home"
        android:name="com.example.instachat.feature.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_nav_graph_home"
            app:destination="@id/nav_graph_home"
            app:popUpToSaveState="true"
            app:restoreState="true"/>
    </fragment>
    <fragment
        android:id="@+id/search"
        android:name="com.example.instachat.feature.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_search_to_nav_graph_search"
            app:destination="@id/nav_graph_search"
            app:popUpToSaveState="true"
            app:restoreState="true"/>
    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="com.example.instachat.feature.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settings_to_nav_graph_settings"
            app:destination="@id/nav_graph_settings"
            app:popUpToSaveState="true"
            app:restoreState="true"/>
    </fragment>


    <include app:graph="@navigation/nav_graph_home" />
    <include app:graph="@navigation/nav_graph_search" />
    <include app:graph="@navigation/nav_graph_settings" />

</navigation>